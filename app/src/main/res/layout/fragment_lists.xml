<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Lists"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2" />

    <include
        android:id="@+id/include2"
        layout="@layout/header_shuffle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ListsEmptyBackground"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@color/colorBlue"
        android:visibility="gone"

        app:civ_border_color="#fff"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ListsEmptyBackground"
        app:layout_constraintEnd_toEndOf="@+id/ListsEmptyBackground"
        app:layout_constraintStart_toStartOf="@+id/ListsEmptyBackground"
        app:layout_constraintTop_toTopOf="@+id/ListsEmptyBackground"
        app:srcCompat="@drawable/ic_thumb_up_black_48dp" />


    <TextView
        android:id="@+id/ListEmptyText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/shuffle_text_background"
        android:gravity="center"
        android:minWidth="200dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/text_list_empty"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ListsEmptyBackground"
        app:layout_constraintVertical_bias="0.26" />



</androidx.constraintlayout.widget.ConstraintLayout>